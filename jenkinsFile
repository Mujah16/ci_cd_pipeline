pipeline
{
	agent any
	stages
	{
		stage('Code Checkout')
		{
			steps
			{
				git 'https://github.com/Mujah16/ci_cd_pipeline.git'
			}
		}
		
		stage('Code Compile')
		{
			steps
			{
				sh 'mvn compile'
			}
		}

		stage('Code Test')
		{
			steps
			{
				sh 'mvn test'
			}
		}

		stage('Code Build')
		{
			steps
			{
				sh 'mvn package'
			}
		}


		stage('Build Docker Image')
		{
			steps
			{
				sh 'cp /var/lib/jenkins/workspace/$JOB_NAME/target/XYZtechnologies-1.0.war /var/lib/jenkins/workspace/$JOB_NAME/xyz_tech.war'
				sh 'docker build -t xyz_tech:$BUILD_NUMBER .'
				sh 'docker tag xyz_tech:$BUILD_NUMBER mujah92/xyz_tech:$BUILD_NUMBER'
			}
		}

		stage('Push Docker Image')
		{ 
			steps
			{   
			    withDockerRegistry([ credentialsId: "docker_hub_credentials", url: "" ])
			    {
			       sh 'docker push mujah92/xyz_tech:$BUILD_NUMBER'
			    }
			}
		}
		

		stage('Deploy to k8s cluster ')
		{
			steps
			{

			    sh 'sed -i "s|mujah92/xyz_tech:latest|mujah92/xyz_tech:${BUILD_NUMBER}|g" xyz_tech_deployment.yaml'
				sh 'minikube kubectl -- apply -f xyz_tech_deployment.yaml'
                sh 'minikube kubectl -- apply -f xyz_tech_service.yaml'
                sh 'minikube kubectl -- apply -f xyz_tech_ingress.yaml'
			}
		}


   }
}